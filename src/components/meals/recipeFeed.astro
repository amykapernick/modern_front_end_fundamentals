---
import RecipeCard from "@components/meals/recipeCard";

const recipes = Astro.props.recipes
---

<style>
	.cards {
		display: flex; 
		flex-wrap: wrap;
		justify-content: space-between; 
		margin: 20px -10px;
		padding: 0;

		& li { 
			flex: 1 1 200px;
			margin: 10px;
			padding: 0; 
			list-style: none;
		}  
	}

	@supports(grid-template-areas: '.') {
		.cards {
			display: grid;
			grid-gap: 20px;
			grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
			margin: 20px 0;

			& li {
				margin: 0;
			}
		}
	}
</style>

<ul class='cards'>
	{
		recipes.map((recipe) => (
			<li>
				<RecipeCard recipe={recipe} />
			</li>
		))
	}
</ul>